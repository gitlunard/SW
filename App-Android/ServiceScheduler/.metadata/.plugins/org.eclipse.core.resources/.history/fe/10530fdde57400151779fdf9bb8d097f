		//mando email
		sendEmail("!!! INSERIRE DEST !!!", "!!! INSERIRE FROM !!!", "provo la email", "questa ï¿½ una prova email");

		Toast.makeText(context, "SMS e email inviati", Toast.LENGTH_LONG).show();
	}
	
